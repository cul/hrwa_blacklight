<div id="cbf" class="container">

  <!-- Example row of columns -->
  <div class="row no-hero-mobile">
	<div class="span12">
	  <h3>Collection Browse</h3>
	  <p>This could say something very useful about browsing, etc.</p>
</div>
  </div>


<div class="row" class="span12">
<div id="cbf_widgets">
  <div class="span3">
	<h6>Site</h6>
	<div class="results_control"></div>
	<ul>
	<% title_browse_list.each_pair do |item, sort_field| %>
			  <%= %Q{<li><span class="invisible sort_field">}.html_safe + sort_field.to_s + %Q{</span><a href="search?search=true&search_type=find_site&utf8=✓&f[title__facet][]=}.html_safe + item + %Q{">}.html_safe + item + %Q{</a></li>}.html_safe %>
			<% end %>
	</ul>
</div>
  <div class="span3">
	<h6>Subject</h6>
	<div class="results_control"></div>
	<ul>
	<% subject_browse_list_items.each do |item, hits| %>
			  <%= %Q{<li><a href="search?search=true&search_type=find_site&utf8=✓&f[subject__facet][]=}.html_safe + item + %Q{">}.html_safe + item + %Q{</a> (<span>#{hits}</span>)</li>}.html_safe %>
			<% end %>
	</ul>
  </div>
  <div class="span2">
	<h6>Geographic Focus</h6>
	<div class="results_control"></div>
	<ul>
	<% geographic_focus_browse_list.each_pair do |item, hits| %>
			  <%= %Q{<li><a href="search?search=true&search_type=find_site&utf8=✓&f[geographic_focus__facet][]=}.html_safe + item + %Q{">}.html_safe + item + %Q{</a> (<span>#{hits}</span>)</li>}.html_safe %>
			<% end %>
	</ul>
  </div>
  <div class="span2">
	<h6>Organization Based In</h6>
	<div class="results_control"></div>
	<ul>
	<% organization_based_in_browse_list.each_pair do |item, hits| %>
			  <%= %Q{<li><a href="search?search=true&search_type=find_site&utf8=✓&f[organization_based_in__facet][]=}.html_safe + item + %Q{">}.html_safe + item + %Q{</a> (<span>#{hits}</span>)</li>}.html_safe %>
			<% end %>
	</ul>
  </div>
  <div class="span2">
	<h6>Language</h6>
	<div class="results_control"></div>
	<ul>
	<% language_browse_list.each_pair do |item, hits| %>
			  <%= %Q{<li><a href="search?search=true&search_type=find_site&utf8=✓&f[language__facet][]=}.html_safe + item + %Q{">}.html_safe + item + %Q{</a> (<span>#{hits}</span>)</li>}.html_safe %>
			<% end %>
	</ul>
  </div>
</div>
</div>

</div> <!-- /container -->
