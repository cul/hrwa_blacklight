<article class="entry">
    <h2>Sign in</h2>
    <%= form_for(resource, :as => resource_name, :url => session_url(resource_name, :protocol => !(Rails.env.development? || Rails.env.test?) ? 'https://' : 'http://')) do |f| %>

        <div><%= f.label :username %>
        <%= f.text_field :username %></div>

        <div><%= f.label :password %>
        <%= f.password_field :password %></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.label :remember_me, (f.check_box :remember_me) + 'Remember me', :class => 'checkbox' %></div>
        <% end -%>

        <div><%= f.submit "Sign in", :class => 'btn' %></div>
    <% end %>

    <%= render "links" %>
</article>
