  <div class="sort_options pull-right">
    <% if @pagination.sort == 'index' -%>
      <span class="disabled az btn">A-Z Sort</span><%= link_to_unless(@pagination.sort == 'count', "Numerical Sort",
        @pagination.params_for_resort_url('count', params), :class => "sort_change numeric btn") %>
    <% elsif @pagination.sort == 'count' -%>
      <%=  link_to("A-Z Sort", @pagination.params_for_resort_url('index', params),
          :class => "sort_change az btn") %><span class="disabled numeric btn">Numerical Sort</span>
    <% end -%>
  </div>

  <% if @pagination.has_previous? || @pagination.has_next? %>
    <div class="prev_next_links">
      <% if @pagination.has_previous? -%>
        <%= link_to('« Previous', catalog_facet_path( @pagination.params_for_previous_url( params) ) , :class=>'prev_page btn')  %>
      <% else -%>
        <span class="disabled ui-state-active prev_page btn">« Previous</span>
      <% end -%>

      <% if @pagination.has_next? -%>
        <%= link_to('Next »', catalog_facet_path( @pagination.params_for_next_url(params)), :class => 'next_page btn') %>
      <% else -%>
        <span class="disabled ui-state-active next_page btn">Next »</span>
      <% end -%>

    </div>
  <% end %>
