  <% if @pagination.has_previous? || @pagination.has_next? %>
    <div class="prev_next_links">
      <% if @pagination.has_previous? -%>
        <%= link_to('« Previous', catalog_facet_path( @pagination.params_for_previous_url( params) ) , :class=>"prev_page btn success small")  %>
      <% else -%>
        <span class="disabled prev_page btn success small">« Previous</span>
      <% end -%>

      <% if @pagination.has_next? -%>
        <%= link_to('Next »', catalog_facet_path( @pagination.params_for_next_url(params)), :class =>:"next_page btn success small" ) %>
      <% else -%>
        <span class="disabled next_page btn success small">Next »</span>
      <% end -%>

  <div class="sort_options floatright">
    <% if @pagination.sort == 'index' -%>
      <span class="disabled az btn success small">Alphabetical</span> <%= link_to_unless(@pagination.sort == 'count', "Numerical",
        @pagination.params_for_resort_url('count', params), :class => "sort_change numeric btn success small") %>
    <% elsif @pagination.sort == 'count' -%>
      <%=  link_to("Alphabetical", @pagination.params_for_resort_url('index', params),
          :class => "sort_change az btn success small") %> <span class="disabled numeric btn success small">Numerical</span>
    <% end -%>
  </div>
  <div class="clear"></div>
    </div>
  <% end %>
