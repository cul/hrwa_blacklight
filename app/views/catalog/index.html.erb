<div class="container">

  <%= render :partial=>'search_form' %>

  <% unless has_search_parameters? %>
    <%# if there are no input/search related params, display the "home" partial -%>

	<div class="row no-hero-mobile">
      <div class="span16">
        <h3>Search Tips</h3>
        <p>This will be a very helpful search tips section probably pulled directly from our Help page (tc). We'll have things like syntax and how to use the advanced search fields (tc). This section is only here on this page because this page was reached directly without a search request. This section will not be shown when there are results.</p>
	  </div>
    </div>

  <% else %>

    <div class="row">
      <div id="primary" class="span12">
	    <div class="pageEntriesInfo">
    	  <h3>Search Results</h3>
    	  <%= render_pagination_info @response, :entry_name=>'result' %><% if( !params[ :q ].blank? ) %> for: <strong class="big lime"><%= q_text = params[ :q ] %></strong><% end %>
    	</div>
    	<%= render 'results_pagination' %>
    	<%#= render 'sort_and_per_page' %>

        <div class="clear"></div>

        <%= render :partial => 'result_list' %>

        <%= render 'results_pagination' %>

      </div><!--/primary-->

      <div id="secondary" class="span4">
	<% sidebar_items << capture do %>
	  <%= render :partial=>'facets' %>
	<% end %>
	<%= sidebar_items.join('').html_safe %>
      </div>
    </div>


  <% end %>

  <footer>
  </footer>

</div>

<!-- TODO: TAKE THIS OUT OF PROD -->
<% if Rails.env == "development" %>
  <% #Only show the box with a border if the hrwa_debug param value == "true" %>
  <% if params[:hrwa_debug] == "true" %>
    <div id="debug" name="debug" style="background-color: white; padding: 10px; border: 1px solid red; margin: 30px;">
      <%= @debug %>
    </div>
  <% end %>
<% end %>
