<div class="container">

  <% unless has_search_parameters? %>
    <%# if there are no input/search related params, display the "home" partial -%>
    <%= render :partial=>'search_form' %>
  <% else %>

    <%# @page_title = application_name + " Search Results" %>

    <%= render :partial => 'search_form' %>

    <div class="row">
      <div id="primary" class="span12">
	    <div class="pageEntriesInfo">
    	  <h3>Search Results</h3>
    	  <%= render_pagination_info @response, :entry_name=>'result' %> for: <strong class="big lime"><%= q_text = params[ :q ] %></strong>
    	<%= render 'results_pagination' %>
    	<%#= render 'sort_and_per_page' %>
    	</div>

        <div class="clear"></div>

        <%= render :partial => 'result_list' %>

      </div>

      <div id="secondary" class="span4">
	<% sidebar_items << capture do %>
	  <%= render :partial=>'facets' %>
	<% end %>
	<%= sidebar_items.join('').html_safe %>
      </div>
    </div>

    <%= render 'results_pagination' %>

  <% end %>

</div>

<!-- TODO: TAKE THIS OUT OF PROD -->
<% if Rails.env == "development" %>
  <% #Only show the box with a border if the hrwa_debug param value == "true" %>
  <% if params[:hrwa_debug] == "true" %>
    <div id="debug" name="debug" style="background-color: white; padding: 10px; border: 1px solid red; margin: 30px;">
      <%= @debug %>
    </div>
  <% end %>
<% end %>
