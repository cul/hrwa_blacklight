<%= form_tag catalog_index_path, :method => :get, :id => 'topsearchform', :class => 'searchform' do %>
  <div class="input-append">
      <div id="top_q_wrapper" class="span6 pull-left">
          <div class="pull-right span1 btn-group nomar nopad">
              <a data-original-title="Search Sources" title="Select Your Search Source" rel="tooltip" class="span1 pull-right btn btn-mini btn-info dropdown-toggle" data-toggle="dropdown" id="advo_link" href="#"><span>Sites</span> <b class="caret"></b></a>
              <div id="search_type_dropdown_chooser" class="dropdown-menu">
                  <strong>Search:</strong>
                  <ul id="top_datasource" class="unstyled">
                      <%
                        if params[:search_type] && params[:search_type] == 'archive'
                          checked_radio_button = 'archive'
                        else
                          checked_radio_button = 'find_site'
                        end
                      %>
                      <li><label class="radio"><input type="radio" id="search_type_find_site" name="search_type" value="find_site" <%= 'checked="checked"'.html_safe if checked_radio_button == 'find_site' %>><span data-shorttitle="Sites">Website descriptions</span></label></li>
                      <li><label class="radio"><input type="radio" id="search_type_archive" name="search_type" value="archive"   <%= 'checked="checked"'.html_safe if checked_radio_button == 'archive' %>><span data-shorttitle="Pages">Page full text</span></label></li>
							<li><label class="radio nopad"><input style="margin-top:-2px;" type="checkbox" id="expanded_results_checkbox" name="expanded_results_checkbox" value="expanded"> <span data-shorttitle="Expanded">Expand Terms</span> <a href="#" rel="tooltip" title="Include synonyms in search results." class="nopad inline"><i class="icon-info-sign"></i></a></label></li>
                  </ul>
              </div>
          </div>
          <input type="text" class="span5 pull-left" data-content="Enter your search terms." data-original-title="Search the Libraries" id="q" name="q" placeholder="Start a new search&hellip;" value="">
              <div id="" class="hidden-desktop">
                  <ul id="tabmob_datasource" class="unstyled pull-left">
						<li class="pull-left">Search Source: &nbsp; </li>
                      <%
                        if params[:search_type] && params[:search_type] == 'archive'
                          checked_radio_button = 'archive'
                        else
                          checked_radio_button = 'find_site'
                        end
                      %>
                      <li class="pull-left"><label class="radio"><input type="radio" id="search_type_mobile_button_find_site" name="search_type_mobile_button" value="find_site" <%= 'checked="checked"' if checked_radio_button == 'find_site' %>><span data-shorttitle="Sites">Sites</span></label> </li>
                      <li class="pull-left"> <label class="radio"><input type="radio" id="search_type_mobile_button_archive" name="search_type_mobile_button" value="archive"   <%= 'checked="checked"' if checked_radio_button == 'archive' %>><span data-shorttitle="Pages">Pages</span></label></li>
							<li class="pull-left"><label class="radio nopad"><input style="margin-top:-2px;" type="checkbox" id="expanded_results_checkbox" name="expanded_results_checkbox" value="expanded"> <span data-shorttitle="Expanded">Expand Terms</span> <a href="#" rel="tooltip" title="Include synonyms in search results." class="nopad inline"><i class="icon-info-sign icon-white"></i></a></label></li>
                  </ul>
              </div>
      </div>
      <label data-original-title="Submit Your Search" rel="tooltip" id="top_form_submit_label" class="pull-left add-on btn-primary">
          <a class="submitss white" id="top_form_submit" href="#"><i class="icon-search icon-white"></i></a>
          <input type="submit" class="hidden invisible">
      </label>
  </div>
<% end %>
